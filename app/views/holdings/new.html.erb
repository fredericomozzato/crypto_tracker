
<section class="px-2">
  <div class="flex flex-row items-center justify-between">
    <h1>New holding</h1>
    <%= link_to 'Back',
                @portfolio,
                class: 'btn-secondary' %>
  </div>
  
  <%= form_with model: [@portfolio, @holding] do |f| %>
    <div class="flex flex-row gap-2">
      <%= f.collection_select :coin_id, 
                              @coins, 
                              :id, 
                              :ticker,
                              { include_blank: 'Coin' },
                              { class: 'form-control' } %>
      <%= f.number_field :amount, 
                         step: 0.00000001,
                         class: 'form-control w-full' %>
    </div>
    <div class="flex flex-col">
      <%= f.submit 'Save',
                    class: 'btn-primary' %>
    </div>
  <% end %>
</section>
<section>
  <div class="flex flex-row justify-between items-center my-3">
    <h1>Portfolios</h1>
    <%= link_to 'Back',
                [:dashboard],
                class: 'btn-secondary' %>
  </div>

  <div class="my-6">
    <%= link_to 'New Portfolio', 
                [:new, :portfolio],
                class: 'btn-primary' %>
  </div>
  
  <div>
    <% @portfolios.each do |portfolio| %>
      <%= link_to [portfolio] do %>
        <div class="flex flex-row items-center justify-between px-2 py-3 border-t hover:bg-slate-200 hover:shadow-md">
          <h2>
            <%= portfolio.name %>
          </h2>
          <h2 class="text-green-800 font-bold">
            <%= number_to_currency portfolio.total_balance %>
          </h2>
        </div>
      <% end %>
    <% end %>
  </div>
</section>
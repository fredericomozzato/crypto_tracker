<div class="px-2">
  <%= form_with model: portfolio do |f| %>
    <div class="flex flex-col">
      <%= f.text_field :name,
                       placeholder: 'Name',
                       class: 'form-control' %>
    </div>
    <div class="flex flex-col">
      <%= f.submit class: 'btn-primary' %>
    </div>
  <% end %>
</div>